/**index.wxss**/
.swiper swiper{
  height:500rpx;
}
.swiper image{
  width:100%;
  height:100%;
  display: block;
}
.board{
  margin:50rpx 30rpx;
}
.board-title{
  font-size: 30rpx;
  font-weight: bold;
}
.movie-list{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.movie-item{
  width:147rpx;
  margin:10rpx;
}
.movie-item image{
  display: block;
  width:100%;
  height:230rpx;
}
.movie-item text{
  display: block;
  text-align: center;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}