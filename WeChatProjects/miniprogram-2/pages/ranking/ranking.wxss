/* pages/ranking/ranking.wxss */
.list{
  margin:15rpx 15rpx 0;
}
.item{
  background-color: #fff;
  padding:20rpx 30rpx;
  display: flex;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
}
.poster{
  flex:1;
  width:100%;
  height:190rpx;
}
.meta{
  flex:4;
  margin-left:20rpx;
}
.title{
  font-size:40rpx;
  color:#333;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.subTitle{
  margin-bottom: 15rpx;
}
.subTitle, .directors{
  color:#666;
  font-size: 28rpx;
  font-weight: bold;
}
.rating{
  flex:1;
}
.rating text{
  display: inline-block;
  padding:15rpx;
  background-color: #f00;
  color:#fff;
  font-size: 26rpx;
  border-radius: 10rpx;
}

.text{
  text-align: center;
  font-size: 26rpx;
  color:#000;
  background-color: #666;
  padding:20rpx;
}