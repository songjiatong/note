/* 轮播图容器*/
.swiper swiper{
  height:480rpx;
}
/* 轮播图图像 */
.swiper image{
  display: block;
  width: 100%;
  height: 100%;
}
/* 版块容器 */
.board{
  box-sizing: border-box;
  margin-top:15rpx;
}
/* 版块子容器 */
.board-item{
  padding:15rpx;
  background-color: #fff;
}
/* 标题 */
.title{
  font-size:24rpx;
  margin:10rpx 0;
}
/* 电影列表容器 */
.movie-list{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
/* 单一电影信息的容器 */
.movie-item{
  width:160rpx;
  margin:10rpx;
}
/* 电影海报 */
.movie-item image{
  display: block;
  width:100%;
  height:230rpx;
}
/* 电影名称 */
.movie-item text{
  display: block;
  margin-top:15rpx;  
  font-size:24rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}